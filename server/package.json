{
  "name": "streamforge-server",
  "version": "0.1.0",
  "description": "StreamForge Node.js sidecar server - Express + Socket.io backend for stream overlays and real-time events",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "build": "pkg . --out-path ../src-tauri/binaries",
    "build:win": "npx @yao-pkg/pkg . --target node20-win-x64 --out-path ../src-tauri/binaries",
    "build:mac": "npx @yao-pkg/pkg . --target node20-macos-x64,node20-macos-arm64 --out-path ../src-tauri/binaries",
    "build:linux": "npx @yao-pkg/pkg . --target node20-linux-x64 --out-path ../src-tauri/binaries"
  },
  "pkg": {
    "targets": [
      "node20-win-x64",
      "node20-macos-x64",
      "node20-macos-arm64",
      "node20-linux-x64"
    ],
    "assets": [
      "config.js"
    ],
    "outputPath": "../src-tauri/binaries"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.0",
    "express": "^4.18.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.0",
    "socket.io": "^4.7.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.13.1"
  },
  "license": "MIT"
}
